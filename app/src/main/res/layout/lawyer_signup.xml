<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sakshi.esamadhan.RegtnTabbedActivity$PlaceholderFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            />

            <TextView
                android:id="@+id/frag2_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Lawyers Registration"
                android:textColor="#932590"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/lawyer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name*"
                android:inputType="text"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/lawyer_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number*"
                android:inputType="phone"
                android:maxLength="10"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/lawyer_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address*"
                android:inputType="text"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/lawyer_pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pincode*"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/lawyer_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email ID*"
                android:inputType="textEmailAddress"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/laywer_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date Of Birth*"
                android:inputType="date"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/lawyer_education"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Education Details"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/lawyer_qualification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Qualification"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/lawyer_workexperience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Work Experience"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/lawyer_areaofexpertise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Area Of Expertise"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/lawyer_legalexpertise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Legal Expertise"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/lawyer_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/lawyer_cpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/lawyer_register"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="REGISTER"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>
